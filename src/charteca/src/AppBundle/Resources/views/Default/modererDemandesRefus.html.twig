{% extends 'AppBundle:Default:base-profil-all.html.twig' %}

{% block body %}

	<table class='contour' width='70%' border='0' cellpading='4' cellspacing='8'>
		<tr class='ligneTitre'><th colspan="2" class='ligneTitre' align='center'>Modération de la demande d'accès à ECA pour l'utilisateur : uid={{ user.username }}</th></tr>

		<tr>
			<td align='center' width='50%' ><form method="post" action="{{ path('moderer_demandes_utilisation', { 'id': user.id }) }}"><button type="submit" name="submit" value="Annuler">Retour</button></form></td>
			<td width='50%' ></td>
		</tr>

		<tr><td colspan="2" style='border: 1px #7966D0; border-bottom-style:dotted;height:10px;'></td></tr>
		<tr>
			<td colspan="2"  align='center'>
			{{ form_start(form) }}
				<span align='center'>{{ form_errors(form) }}</span>
				<table>
					<tr>
 						<td>{{ form_label(form.motifRefus) }}</td>
 						<td>{{ form_widget(form.motifRefus) }}</td>
 						<td>{{ form_errors(form.motifRefus) }}</td>
					</tr>
					<tr>
 						<td>{{ form_label(form.save, "", {}) }}</td>
 						<td>{{ form_widget(form.save, {}) }}</td>
 					</tr>
				</table>
			{{ form_rest(form) }}
			{{ form_end(form) }}
			</td>
		</tr>

	</table>

{% endblock %}
